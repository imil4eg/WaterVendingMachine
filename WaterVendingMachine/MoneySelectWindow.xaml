<Window x:Class="WaterVendingMachine.MoneySelectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterVendingMachine"
        mc:Ignorable="d"
        Title="Выберите количество" Height="120" Width="80">
    <Border Padding="4" Background="Aqua">
        <StackPanel>
            <TextBlock Name="FirstTextBlock" Style="{StaticResource ClickText}" FontSize="13" />
            <TextBlock Name="SecondTextBlock" Style="{StaticResource ClickText}" FontSize="13"/>
            <TextBlock Name="ThirdTextBlock" Style="{StaticResource ClickText}" FontSize="13"/>
            <TextBlock Name="ForthTextBlock" Style="{StaticResource ClickText}" FontSize="13"/>
        </StackPanel>
    </Border>
</Window>
